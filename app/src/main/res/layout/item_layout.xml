<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#E6E6E6"
    card_view:cardCornerRadius="@dimen/cardview"
    card_view:cardElevation="@dimen/cardview"
    android:foreground="?android:attr/selectableItemBackground">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/fab_margin">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            tools:ignore="contentDescription"
            android:text="@string/name"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingStart="@dimen/fab_margin"
            android:paddingLeft="@dimen/fab_margin"
            app:layout_constraintLeft_toRightOf="@id/text_name_title"
            app:layout_constraintTop_toTopOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            tools:ignore="contentDescription"
            android:text="My Name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_status_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            tools:ignore="contentDescription"
            android:text="@string/status"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_status"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingStart="@dimen/fab_margin"
            android:paddingLeft="@dimen/fab_margin"
            app:layout_constraintLeft_toRightOf="@id/text_status_title"
            app:layout_constraintTop_toBottomOf="@+id/text_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="Here"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_species_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_status"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            tools:ignore="contentDescription"
            android:text="@string/species"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_species"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingStart="@dimen/fab_margin"
            android:paddingLeft="@dimen/fab_margin"
            app:layout_constraintLeft_toRightOf="@id/text_species_title"
            app:layout_constraintTop_toBottomOf="@+id/text_status"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="Here"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>